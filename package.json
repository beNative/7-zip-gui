{
  "name": "7zip-gui",
  "version": "1.0.3",
  "description": "A GUI for 7zip on Windows",
  "main": "dist/main.cjs",
  "type": "module",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "npm run build:css && npm run build:renderer && npm run build:main && npm run build:preload",
    "build:css": "tailwindcss -i ./input.css -o ./dist/styles.css",
    "build:renderer": "esbuild index.tsx --bundle --outfile=dist/renderer.js --platform=browser --format=esm --jsx=automatic --sourcemap",
    "build:main": "esbuild electron/main.ts --bundle --outfile=dist/main.cjs --platform=node --format=cjs --external:electron --sourcemap",
    "build:preload": "esbuild electron/preload.ts --bundle --outfile=dist/preload.cjs --platform=node --format=cjs --external:electron --sourcemap",
    "package": "npm run build && electron-builder --x64 --ia32",
    "publish": "npm run build && electron-builder --publish always --x64 --ia32"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/beNative/7-zip-gui.git"
  },
  "keywords": [
    "7zip",
    "electron",
    "react",
    "gui"
  ],
  "author": "AI",
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^6.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.13",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.21.3",
    "typescript": "^5.4.5",
    "tailwindcss": "^3.4.3"
  },
  "build": {
    "appId": "com.example.7zipgui",
    "productName": "7-Zip GUI",
    "directories": {
      "output": "release"
    },
    "publish": {
      "provider": "github"
    },
    "files": [
      "dist/**/*",
      "index.html"
    ],
    "extraResources": [
      {
        "from": "./",
        "to": "./",
        "filter": [
          "README.md",
          "FUNCTIONAL_MANUAL.md",
          "TECHNICAL_MANUAL.md",
          "CHANGELOG.md"
        ]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName} Setup ${version}-${arch}.${ext}",
      "preCompressedFileExtensions": []
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ],
      "artifactName": "${productName}-${version}.${ext}"
    }
  }
}